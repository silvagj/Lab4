        mc:Ignorable="d"
        Title="MainWindow" Height="389" Width="906">
    <Grid Height="379" VerticalAlignment="Top">
        <Button x:Name="btnAddMain" Content="Add New Customer" HorizontalAlignment="Left" Margin="103,167,0,0" VerticalAlignment="Top" Width="130" Height="34" Click="btnAddMain_Click"/>
